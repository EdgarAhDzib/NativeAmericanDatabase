<div class="container">
	<h1 class="text-center">The Native American Database</h1>
	<div class="circular-menu">
		<div class="circle">
			<section>
				<div class="container">
					<div class="row">
						<div class="span4"></div>
						<div id="mask" class="span4">
							<img class="center-block" src="../assets/images/kwakiutl-clan-mask.png" class="img-responsive" alt="Kwakiutl Clan Mask" style="width:200px;height:200px" ;></div>
						<div class=" span4 "></div>
					</div>
				</div>
		</div>
	</div>

{{#if showMenus}}
	<div class="col-sm-6"><h2><a href="../cultures">Browse by Culture</a></h2></div>
	<div class="col-sm-6"><h2><a href="../subjects">Browse by Subject</a></h2></div>
{{/if}}

{{#if cultures}}

	{{> menus/cultures}}

{{/if}}

{{#if subjects}}

	{{> menus/subjects}}

{{/if}}

{{#if isGroup}}
<h2>Results for
	{{#each entry}}
		{{#if @first}}
			{{this.group}}
		{{/if}}
	{{/each}}
</h2>
{{/if}}

{{#if isSubj}}
<h2>Results for 
	{{#each entry}}
		{{#if @first}}
			{{#each content_fields}}
				'{{this.ethn_id}}'
			{{/each}}
		{{/if}}
	{{/each}}
</h2>
{{/if}}

{{#if searchParam}}

	{{> search/search}}

{{else}}

{{/if}}

{{#if itemPage}}

	{{> search/item}}

{{/if}}